super + e
    rofi -show run

super + w
    rofi -show window

super + Tab
    rofi -show window

super + a
    alacritty --config-file ~/.config/alacritty/alacritty_dwm.yml -e fish

super + alt + b
    alacritty --config-file ~/.config/alacritty/alacritty_dwm.yml -e byobu

super + f
    firefox

super + s
    st -e fish

super + c
    ~/install/codium

# logout (go back to LightDM)
super + shift + q
    pkill dwm

super + shift + s
    shutdown -h now

XF86MonBrightnessDown
    bash ~/bin/brightness.bash "-"

XF86MonBrightnessUp
    bash ~/bin/brightness.bash "+"

XF86AudioMute
    /usr/bin/pactl set-sink-mute "@DEFAULT_SINK@" toggle

XF86AudioLowerVolume
    /usr/bin/pactl set-sink-volume "@DEFAULT_SINK@" "-5%"

XF86AudioRaiseVolume
    /usr/bin/pactl set-sink-volume "@DEFAULT_SINK@" "+5%"
