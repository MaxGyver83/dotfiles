super + e
    rofi -show run

super + w
    rofi -show window

#super + Tab
#    rofi -show window

super + a
    alacritty --config-file ~/.config/alacritty/alacritty_dwm.yml -e fish

super + b
#    alacritty --config-file ~/.config/alacritty/alacritty_dwm.yml -e byobu
    pgrep -f byobu &> /dev/null && wmctrl -a byobu || alacritty --config-file ~/.config/alacritty/alacritty_dwm.yml -e byobu

super + f
    pgrep firefox &> /dev/null && wmctrl -a firefox || firefox

super + s
    st -e fish

super + c
#    ~/install/codium
    pgrep codium &> /dev/null && wmctrl -a codium || ~/install/codium

super + p
    pcmanfm

# logout (go back to LightDM)
super + shift + q
    pkill dwm

super + shift + s
    shutdown -h now

Print
    xfce4-screenshooter -s $(xdg-user-dir PICTURES)

# Screenshot of selected region
alt + Print
    xfce4-screenshooter -r -s $(xdg-user-dir PICTURES)

XF86MonBrightnessDown
    bash ~/bin/brightness.bash "-"

XF86MonBrightnessUp
    bash ~/bin/brightness.bash "+"

XF86AudioMute
    /usr/bin/pactl set-sink-mute "@DEFAULT_SINK@" toggle

XF86AudioLowerVolume
    /usr/bin/pactl set-sink-volume "@DEFAULT_SINK@" "-5%"

XF86AudioRaiseVolume
    /usr/bin/pactl set-sink-volume "@DEFAULT_SINK@" "+5%"
