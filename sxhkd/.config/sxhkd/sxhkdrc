# show all shortcuts in rofi
super + shift + e
    shortcuts.bash rofi

# start rofi
super + e
    rofi -show run

# show open windows (in rofi)
super + w
    rofi -show window

# start alacritty (with fish)
super + a
    alacritty --config-file ~/.config/alacritty/alacritty_dwm.yml -e fish

# start or focus byobu (in alacritty)
super + b
#    alacritty --config-file ~/.config/alacritty/alacritty_dwm.yml -e byobu
    pgrep -f byobu &> /dev/null && wmctrl -a byobu || alacritty --config-file ~/.config/alacritty/alacritty_dwm.yml -e byobu

# start or focus Firefox
super + f
    pgrep -f firefox &> /dev/null && wmctrl -a firefox || firefox

# start st (with fish)
super + s
    st -e fish

# start or focus VS Codium
super + c
#    ~/install/codium
    pgrep codium &> /dev/null && wmctrl -a codium || ~/install/codium

# start pcmanfm (File Manager)
super + p
    pcmanfm

# Zwischenablage
super + z
    copyq toggle > /dev/null

# quit (and restart) dwm (defined in dwm's config.h)
# super + alt + q

# kill dwm (logout/go back to LightDM)
super + alt + k
    pkill dwm

# reboot
super + alt + r
    reboot

# shutdown
super + alt + s
    shutdown -h now

# lock screen
super + alt + l
    png="$(xdg-user-dir PICTURES)/Leo3.png" && test -f "$png" && i3lock -e -f -i "$png" -t || i3lock -e -f -c 333333
# lock screen
super + shift + z
    png="$(xdg-user-dir PICTURES)/Leo3.png" && test -f "$png" && i3lock -e -f -i "$png" -t || i3lock -e -f -c 333333

# screenshot
Print
    #xfce4-screenshooter -s $(xdg-user-dir PICTURES)
    sleep 0.2 ; scrot "~/Screenshots/%Y-%m-%d %H.%M.%S \$wx\$h.png"

# screenshot of active window
alt + Print
    sleep 0.2 ; scrot -u "~/Screenshots/%Y-%m-%d %H.%M.%S \$wx\$h.png"
    #xfce4-screenshooter -w -s $(xdg-user-dir PICTURES)

# screenshot of selected region
shift + Print
    sleep 0.2 ; scrot -s "~/Screenshots/%Y-%m-%d %H.%M.%S \$wx\$h.png"
    #xfce4-screenshooter -r -s $(xdg-user-dir PICTURES)

# screenshot of active window to /tmp and clipboard
ctrl + alt + Print
    scrot -u '/tmp/%Y-%m-%d %H.%M.%S $wx$h.png' -e 'copyq write image/png - < "$f"'

# screenshot of selected region or window to /tmp and clipboard
ctrl + shift + Print
    scrot -s '/tmp/%Y-%m-%d %H.%M.%S $wx$h.png' -e 'copyq write image/png - < "$f"'

# decrease brightness
XF86MonBrightnessDown
    bash ~/bin/brightness.bash "-"

# increase brightness
XF86MonBrightnessUp
    bash ~/bin/brightness.bash "+"

# mute audio
XF86AudioMute
    /usr/bin/pactl set-sink-mute "@DEFAULT_SINK@" toggle

# lower volume
XF86AudioLowerVolume
    /usr/bin/pactl set-sink-volume "@DEFAULT_SINK@" "-5%"

# raise volume
XF86AudioRaiseVolume
    /usr/bin/pactl set-sink-volume "@DEFAULT_SINK@" "+5%"
