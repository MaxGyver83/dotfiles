#!/bin/sh

COLOR_BLUE="\033[0;34m"
BOLD="\033[1m"
RESET="\033[0m"

print_header() {
    printf "\n$COLOR_BLUE$BOLD$1$RESET\n"
}

git_pull() {
    # return 0 if `git pull` was successful and there was an update
    result="$(LC_ALL=C git pull)" && echo "$result" || exit $?
    case "$result" in
    "Already up to date."*) return 1 ;;
    esac
}

update_harec() {
    print_header harec
    cd ~/repos/harec
    git_pull || return
    mkdir -p build &&
    cd build
    ../configure &&
    make &&
    make check &&
    sudo make install
}

update_hare() {
    print_header hare
    cd ~/repos/hare
    # cp config.example.mk config.mk
    git_pull || return
    make &&
    make check &&
    sudo make uninstall install
}

update_harec
update_hare

exit 0
