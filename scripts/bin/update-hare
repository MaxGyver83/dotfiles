#!/bin/sh

COLOR_BLUE="\033[0;34m"
BOLD="\033[1m"
RESET="\033[0m"

case $1 in
-f|--force) force=1;;
esac

print_header() {
    printf "\n$COLOR_BLUE$BOLD$1$RESET\n"
}

git_pull() {
    # return 0 if `git pull` was successful and there was an update
    result="$(LC_ALL=C git pull)" && echo "$result" || exit $?
    case "$result" in
    "Already up to date."*) return 1 ;;
    esac
}

update_harec() {
    print_header harec
    cd ~/repos/harec
    git_pull || [ $force ] || return
    cp configs/linux.mk config.mk &&
    make &&
    make check &&
    sudo make install
}

update_hare() {
    print_header hare
    cd ~/repos/hare
    git_pull || [ $force ] || return
    cp configs/linux.mk config.mk &&
    make &&
    make check &&
    sudo make uninstall install
}

update_harec
update_hare

exit 0
